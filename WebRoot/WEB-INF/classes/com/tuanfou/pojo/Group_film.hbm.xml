<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 <!-- 产品信息字段配置信息 -->
 <hibernate-mapping>
 	<class name="com.tuanfou.pojo.Group_film" table="t_group_film">
 		<!-- id值 -->
 		<id name="id" column="id" type="int">
			<generator class="native"/>
		</id>
		<!-- 产品名称 -->
		<property name="filmId" type="int">
			<column name="filmId"/>
		</property>
		<!-- 产品价格 -->
		<property name="merchantId" type="int">
			<column name="merchantId"/>
		</property>
		<property name="cityId" type="int">
			<column name="cityId"/>
		</property>
		<property name="areaId" type="int">
			<column name="areaId"/>
		</property>
		<property name="cinemaId" type="int">
			<column name="cinemaId"/>
		</property>
		<property name="currentPrice" type="float">
			<column name="currentPrice"/>
		</property>
		<property name="originalPrice" type="float">
			<column name="originalPrice"/>
		</property>
 	</class>
 </hibernate-mapping>